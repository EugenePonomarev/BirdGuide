<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="@color/textStatusRed" />

    <!-- Границы -->
    <stroke
        android:width="2dp"
        android:color="@color/textStatusRed" />

    <!-- Закругленные углы -->
    <corners android:radius="8dp" />

    <!-- Отступы внутри фона (опционально) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>